// Ejemplostring.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <string>

using namespace std;
void leer_datos(string nombre);
void det_longitud(string nombre.lenght,string var2, int longitud);
void compare_strings(string var2, string nombre);
void num_elem(int cont, int longitud, string nombre);
void num_elem_at(int cont, int longitud, string nombre);
void parte_str(int pos,int longitud, string nombre);
void inter_str(string nombre, string var2);
void find_str(int longitud,string var2);
void inv_str(string nombre, string var2, int longitud, char aux);
void quitar_voc(string nombre, string var2,int longitud, int cont);
void main()
{
	int op,longitud,cont,pos;
	char aux;
	
	string var1, var2, nombre; 
	do{
		cout<<"------------------MENU----------------"<<endl;
		cout<<"Op1. Leeer datos string."<<endl;
		cout<<"Op2. Determinar la longitud de un string."<<endl;
		cout<<"Op3. Para comparar dos strings."<<endl;
		cout<<"Op4. Numero de elementos."<<endl;
		cout<<"Op5. Numero de elementos con at. "<<endl;
		cout<<"Op6. Sacar una parte del strings."<<endl;
		cout<<"Op7. Intercambiar strings."<<endl;
		cout<<"Op8. Encuentra caracteres en string."<<endl;
		cout<<"Op9. Invertir una frase ."<<endl;
		cout<<"Op10. Quitar las vocales."<<endl;
		cout<<"Op10. Salir"<<endl;
		cin>>op;
		switch(op){
			case 1: {	leer_datos(nombre);
						break;
					}
			case 2: {	det_longitud(nombre.length ,var2,longitud);
						break;
					}
			case 3: {
						compare_strings(var2, nombre);
						break;
					}
			case 4: {	num_elem(cont,longitud, nombre);
						break;
					}
			case 5: {	num_elem_at(cont,longitud, nombre);
						break;
					}
			case 6: {	parte_str(pos,longitud, nombre);
						break;
					}
			case 7: {	inter_str(nombre, var2);
						break;
					}
			case 8: {	find_str(longitud,var2);
						break;
					}
			case 9: {	inv_str(nombre,var2, longitud, aux);
						break;
					}
			case 10: {	quitar_voc(nombre,var2,longitud,cont);
						break;
					 }
			case 0: {	cout<<"SALIR DEL PROGRAMA"<<endl;
						break;
					}
			default: {	cout<<"OPCION INCORRECTA"<<endl;
					 }
		}
	}while(op!=0);
	getch();
}
	
void leer_datos(string nombre)
{ cout<<endl<<"Ejemplo de uso de getline para ingresar cadena de caracteres";
  cout<<endl<<"Ingrese un nombre: ";
  cin.ignore();
  getline(cin,nombre);
}

void det_longitud(string nombre.length ,string var2, int longitud)
{
	getline(cin,nombre);
	cout<<endl<<"Ejemplo de uso de length para determinar la longitud de un string";
	longitud=nombre.length();
	cout <<endl<<"El string tiene: "<<longitud;
}

void compare_strings(string var2, string nombre)
{
		cout<<endl<<"Ejemplo de uso de compare para determinar si dos cadenas son iguales";
		cout<<endl<<"Redigite el nombre: ";
		cin.ignore();
		getline(cin,var2);

		if (nombre.compare(var2) == 0 )
			cout<<endl<<"Los datos coinciden"<<endl;
		else 
			cout << nombre << " es diferente que "<<var2 << " :1"<<endl;
}

void num_elem(int cont, int longitud, string nombre)
{		cont=0;
		cout<<endl<<"Ejemplo de uso de elementos individuales: "<<endl;
		cout<<endl<<"Contar vocales"<<endl<<endl;
		for (int i=0;i<longitud;i++)
			if (nombre[i]=='a' || nombre[i]=='e'||nombre[i]=='i'||nombre[i]=='o'||nombre[i]=='u')
				cont++;
		cout<<"Numero de vocales: "<<cont<<endl;
}
void num_elem_at(int cont, int longitud, string nombre)
{
